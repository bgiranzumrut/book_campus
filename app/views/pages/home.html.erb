<h1> Welcome to Book Campus</h1>
<p>Browse books, explore authors, and discover new genres.</p>

<h2>Featured Books</h2>
<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="card">
        <img src="<%= book.cover_image %>" class="card-img-top" alt="<%= book.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
          <p class="card-text">By <%= book.authors.map(&:name).join(", ") %></p>
          <p class="card-text"><strong>Genre:</strong> <%= book.genre %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Browse All Books", books_path, class: "btn btn-primary" %>
  <%= link_to "Explore Authors", authors_path, class: "btn btn-secondary" %>
</div>
