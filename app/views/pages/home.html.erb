<h1> Welcome to Book Campus</h1>
<p>Browse books, explore authors, and discover new genres.</p>

<h2>Featured Books</h2>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4 mb-4 d-flex align-items-stretch">
      <div class="card shadow-sm w-100">
        <img src="<%= book.cover_image %>" class="card-img-top book-cover" alt="<%= book.title %>">
        <div class="card-body text-center d-flex flex-column">
          <h5 class="card-title"><%= link_to book.title, book_path(book), class: "text-decoration-none" %></h5>
          <p class="text-muted"><strong>Genre:</strong> <%= book.genre %></p>
          <div class="mt-auto">
            <%= link_to "View Details", book_path(book), class: "btn btn-sm btn-outline-primary w-100" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4 text-center">
  <%= link_to "Browse All Books", books_path, class: "btn btn-primary" %>
  <%= link_to "Explore Authors", authors_path, class: "btn btn-secondary" %>
</div>
